<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.screen.setting.SettingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="16dp">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivProfile"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:shapeAppearanceOverlay="@style/CircularImage"
            android:src="@drawable/default_profile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="@string/user_lastname"
            app:layout_constraintBottom_toTopOf="@id/tvEmail"
            app:layout_constraintStart_toEndOf="@id/ivProfile"
            app:layout_constraintTop_toTopOf="@id/ivProfile"/>

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="@color/neutral_700"
            android:textSize="14sp"
            android:text="@string/user_email"
            app:layout_constraintTop_toBottomOf="@id/tvUsername"
            app:layout_constraintStart_toEndOf="@id/ivProfile"
            app:layout_constraintBottom_toBottomOf="@id/ivProfile"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/edit_profile"
            android:src="@drawable/ic_edit_24"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="@id/tvUsername"
            app:layout_constraintBottom_toBottomOf="@id/tvEmail"
            app:layout_constraintEnd_toEndOf="parent"/>

        <include
            android:id="@+id/boxEditProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            layout="@layout/component_setting_list"
            app:layout_constraintTop_toBottomOf="@id/tvEmail"
            app:layout_constraintStart_toStartOf="parent"/>

        <include
            android:id="@+id/boxEditPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/component_setting_list"
            app:layout_constraintTop_toBottomOf="@id/boxEditProfile"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="64dp"
            android:paddingVertical="8dp"
            android:background="@color/pink"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent">
            <ImageView
                android:id="@+id/icLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:contentDescription="@string/sign_out_button"
                android:src="@drawable/ic_logout_24"/>
            <TextView
                android:id="@+id/tvLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textStyle="bold"
                android:text="@string/sign_out_button"/>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/popUpInfoCard"
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white_background"
                android:padding="16dp">
                <ImageView
                    android:id="@+id/ivPopup"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_logout_24"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/tvTitlePopup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_out_button"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/ivPopup"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/tvSubtitlePopup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_out_subtitle"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvTitlePopup"/>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/tvSubtitlePopup"
                    app:layout_constraintStart_toStartOf="parent">
                    <Button
                        android:id="@+id/btnCancelPopup"
                        android:layout_width="109dp"
                        android:layout_height="match_parent"
                        android:text="@string/sign_out_cancel_button"
                        android:textSize="12sp"
                        android:textColor="@color/neutral_900"
                        android:backgroundTint="@color/white"/>
                </com.google.android.material.card.MaterialCardView>
                <Button
                    android:id="@+id/btnPopupLogout"
                    android:layout_width="109dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:text="@string/sign_out_button_confirmation"
                    android:backgroundTint="@color/red_500"
                    app:layout_constraintTop_toBottomOf="@+id/tvSubtitlePopup"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>