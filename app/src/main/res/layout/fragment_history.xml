<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.screen.history.HistoryFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvRiwayat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="24dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="@string/history_title"
            android:layout_margin="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/informationCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/blue_100"
            app:strokeWidth="2dp"
            app:strokeColor="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/tvRiwayat">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="Informasi Status Asupan Gula"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_info_outline_24"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clListRiwayat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/informationCard">
            <TextView
                android:id="@+id/titleMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/month"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRiwayat"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                tools:listitem="@layout/item_riwayat_rounded"
                app:layout_constraintTop_toBottomOf="@+id/titleMonth"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/clRiwayatCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/white"
            app:strokeWidth="2dp"
            app:strokeColor="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/clListRiwayat">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clRiwayat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@drawable/custom_edittext_border">
                <com.dicoding.glucoscan.ui.component.DailyRounded
                    android:id="@+id/drDaily"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:data="@string/sugar_intake"
                    app:dimension="10sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/tvDaily"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/day"
                    app:layout_constraintTop_toBottomOf="@id/drDaily"
                    app:layout_constraintStart_toStartOf="@id/drDaily"
                    app:layout_constraintEnd_toEndOf="@id/drDaily"/>

                <TextView
                    android:id="@+id/titleDailyScan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/scan_history"
                    app:layout_constraintStart_toStartOf="@id/tvDailyScan"
                    app:layout_constraintBottom_toTopOf="@id/tvDailyScan"/>

                <TextView
                    android:id="@+id/tvDailyScan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:textStyle="bold"
                    android:text="@string/scan_history_value"
                    app:layout_constraintStart_toEndOf="@+id/drDaily"
                    app:layout_constraintBottom_toBottomOf="@id/drDaily"/>

                <TextView
                    android:id="@+id/titleStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/status"
                    app:layout_constraintBottom_toTopOf="@id/tvStatus"
                    app:layout_constraintStart_toEndOf="@id/titleDailyScan"/>

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/safe"
                    app:layout_constraintStart_toStartOf="@id/titleStatus"
                    app:layout_constraintBottom_toBottomOf="@id/drDaily"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/titleActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textStyle="bold"
            android:text="@string/detail_activity_title"
            app:layout_constraintTop_toBottomOf="@id/clRiwayatCard"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRiwayatActivity"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginHorizontal="16dp"
            tools:listitem="@layout/item_riwayat_activity"
            app:layout_constraintTop_toBottomOf="@+id/titleActivity"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <View
            android:id="@+id/overlayView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="16dp"
            android:background="@color/black_background"
            android:alpha="0.5"
            android:visibility="gone"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/popUpInfoCard"
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            app:cardElevation="16dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/white"
            app:strokeWidth="2dp"
            app:strokeColor="@color/gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.40"
            android:visibility="gone">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/popUpInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">
                <ImageView
                    android:id="@+id/ivPopup"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_info_outline_24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Informasi"
                    app:layout_constraintStart_toEndOf="@id/ivPopup"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="@string/history_information"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/ivPopup"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>